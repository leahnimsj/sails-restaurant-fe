<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Edit Restaurant</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="restaurant_id">SELECT A RESTAURANT TO UPDATE</label><br/>
    <select id="restaurant_id" name="id">
    <% if(typeof restaurants != "undefined" && restaurants.length > 0){ %>
      <% restaurants.forEach(function(restaurant){ %>
        <option value="<%= restaurant.id %>">
          <%= restaurant.restaurantName %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Update Restaurant</h2>
<form action="/update" method="POST" class="form-horizontal" id="updateRestaurantForm">
  <input type="hidden" name="id" id="restaurant_id" value="">
  <div class="form-group">
    <label for="restaurant_name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="restaurant_name" name="restaurantName" placeholder="Bob's Burger House" required>
    </div>
  </div>
  <div class="form-group">
    <label for="cuisine" class="col-sm-2 control-label">Cuisine</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="cuisine" name="cuisine"  placeholder="American" required>
    </div>
  </div>
  <div class="form-group">
    <label for="price_rating" class="col-sm-2 control-label">Price Rating</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="expensive_rating" name="expensiveRating" placeholder="1-5" required>
    </div>
  </div>
  <div class="form-group">
    <label for="location" class="col-sm-2 control-label">Location</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="location_neighborhood" name="locationNeighborhood" placeholder="Fremont">
    </div>
  </div>
  <div class="form-group">
    <label for="proximity_home" class="col-sm-2 control-label">Close to home?</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="close_home" name="closeToHome" placeholder="true">
    </div>
  </div>
  <div class="form-group">
    <label for="website" class="col-sm-2 control-label">Link</label>
    <div class="col-sm-10">
      <input type="url" class="form-control" id="website" name="website" placeholder="http://bobs.com">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update Restaurant</button>
    </div>
  </div>
</form>
