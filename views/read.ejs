<h2>Restaurants</h2>
<table class="table table-striped table-bordered" id="restaurantTable" style="width:100%">
  <thead>
    <tr>
      <th>Restaurant Name</th>
      <th>Cuisine</th>
      <th>Expensive Rating</th>
      <th>Location Neighborhood</th>
      <th>Website</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof restaurants != "undefined" && restaurants.length > 0){ %>
    <% restaurants.forEach(function(restaurant){ %>
      <tr>
        <td><%= restaurant.restaurantName %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.expensiveRating %></td>
        <td><%= restaurant.locationNeighborhood %></td>
        <td><%= restaurant.website %></td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>
